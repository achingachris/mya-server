<% layout('layout') %>
<% title = 'Nominees List' %> <%# More descriptive title %>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Nominees</h1>

    <div class="mb-3">
      <a href="/dashboard/nominees/new" class="btn btn-success">Add New Nominee</a>
    </div>

    <form method="GET" action="/dashboard/nominees" class="mb-4">
      <div class="row">
        <div class="col-md-4">
          <input type="text" name="search" class="form-control" placeholder="Search by name" value="<%= search || '' %>" />
        </div>
        <div class="col-md-4">
          <select name="category" class="form-select">
            <option value="">All Categories</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat._id %>" <%= category === cat._id.toString() ? 'selected' : '' %>><%= cat.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-4">
          <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
      </div>
    </form>

    <ul class="list-group">
      <% nominees.forEach(nominee => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= nominee.name %></strong> - <%= nominee.category.name %> (<%= nominee.number_of_votes %> votes)
          </div>
          <div>
            <a href="/dashboard/nominees/<%= nominee._id %>/edit" class="btn btn-warning btn-sm me-2">Edit</a>
            <form action="/dashboard/nominees/<%= nominee._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

