<% layout('layout') %>
<% title = 'Dashboard' %>

<h1 class="h3 mb-4 text-gray-800">Coupons</h1>

<a href="/admin/coupons/new" class="btn btn-primary mb-3">Add New Coupon</a>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Coupons</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Type</th>
                        <th>Value</th>
                        <th>Max Uses</th>
                        <th>Uses Count</th>
                        <th>Expiry Date</th>
                        <th>Applicable Ticket Type</th>
                        <th>Status</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% coupons.forEach(coupon => { %>
                    <tr>
                        <td><%= coupon.code %></td>
                        <td><%= coupon.type %></td>
                        <td><%= coupon.value %> <%= coupon.type === 'percentage' ? '%' : '' %></td> <%# Display value with % if percentage %>
                        <td><%= coupon.max_uses === null ? 'Unlimited' : coupon.max_uses %></td>
                        <td><%= coupon.uses_count %></td>
                        <td><%= coupon.expiry_date.toDateString() %></td> <%# Format date %>
                        <td><%= coupon.applicable_ticket_type ? coupon.applicable_ticket_type.name : 'Any' %></td> <%# Display linked type name or 'Any' %>
                        <td><%= coupon.status %></td>
                         <td><%= coupon.createdAt.toDateString() %></td> <%# Format date %>
                        <td>
                            <a href="/admin/coupons/<%= coupon._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                            <%# Delete form %>
                            <form action="/admin/coupons/<%= coupon._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this coupon?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
