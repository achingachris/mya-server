<% layout('layout') %>
<% title = 'Dashboard' %>
<%# This content will be injected into the layout file %>

<h1 class="h3 mb-4 text-gray-800">Tickets</h1>

<%# Note: Creating tickets manually via admin might not be typical. %>
<%# Ticket creation usually happens upon purchase. %>
<%# You might remove the "Add New Ticket" button if manual creation isn't desired. %>
<a href="/admin/tickets/new" class="btn btn-primary mb-3">Add New Ticket (Manual)</a>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Tickets</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ticket Code</th>
                        <th>Ticket Type</th>
                        <th>Purchaser Name</th>
                        <th>Purchaser Email</th>
                        <th>Purchaser Phone</th>
                        <th>Status</th>
                        <th>Payment Status</th> <%# Added column %>
                        <th>Purchased At</th>
                        <th>Used At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% tickets.forEach(ticket => { %>
                    <tr>
                        <td><%= ticket.ticket_code %></td>
                        <td><%= ticket.ticket_type ? ticket.ticket_type.name : 'N/A' %></td>
                        <td><%= ticket.purchaser_name %></td>
                        <td><%= ticket.purchaser_email %></td>
                        <td><%= ticket.purchaser_phone %></td>
                        <td><%= ticket.status %></td>
                        <td><%= ticket.payment_status %></td> <%# Display payment status %>
                        <td><%= ticket.createdAt.toDateString() %></td>
                        <td><%= ticket.used_at ? ticket.used_at.toDateString() : 'N/A' %></td>
                        <td>
                            <a href="/admin/tickets/<%= ticket._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/admin/tickets/<%= ticket._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this ticket?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
