<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nomination Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Nomination Categories</h1>

    <div class="mb-3">
      <a href="/admin/categories/new" class="btn btn-success">Add New Category</a>
    </div>

    <ul class="list-group">
      <% categories.forEach(category => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= category.name %></strong> - <%= category.description %>
          </div>
          <div>
            <a href="/admin/categories/<%= category._id %>/edit" class="btn btn-warning btn-sm me-2">Edit</a>
            <form action="/admin/categories/<%= category._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
