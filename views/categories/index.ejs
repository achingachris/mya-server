<% layout('layout') %>
  <% title='Nomination Categories' %>

    <div class="container mt-5">
      <h1 class="text-center mb-4">
        <%= title %>
      </h1>

      <div class="mb-3">
        <a href="/dashboard/nomination-categories/new" class="btn btn-success">Add New Category</a>
      </div>

      <div class="table-responsive mb-4">
        <% if (categories.length===0) { %>
          <div class="alert alert-info text-center">
            No nomination categories found.
          </div>
          <% } else { %>
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th scope="col">Category Name</th>
                  <th scope="col">Description</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% categories.forEach(category=> { %>
                  <tr>
                    <td>
                      <%= category.name %>
                    </td>
                    <td>
                      <%= category.description %>
                    </td>
                    <td>
                        <a href="/dashboard/nomination-categories/<%= category._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
            <% } %>
      </div>

    </div>